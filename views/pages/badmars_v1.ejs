<!DOCTYPE html>

<html>
  <head>
    <% include ../partials/head %>
    <script src="js/badmars/dependencies/three.js"></script>
    <script src="js/badmars/dependencies/stats.min.js"></script>
    <script src="js/badmars/dependencies/OBJLoader.js"></script>

    <script src="js/badmars/badmars-v1.js"></script>
    <style>
      body {
        margin: 0;
        overflow: hidden;
      }

      canvas {
        width: 100%;
        height: 100%
      }
      #buttons {
        position: absolute;
        left: 10px;
        top: 200px;
        width: 100px;
        padding: 5px;

      }

      #buttons .btn {
        width: 100%;
        padding-bottom: 10px;
      }
      #info .progress-bar {
        padding: 5px;
      }

      #info {
        position: absolute;
        left: 10px;
        top: 50px;
        bottom: auto;
        width: 300px;
        height: auto;
        padding: 5px;
      }
    </style>
  </head>
  <body>
    <canvas id='threePanel'>
    </canvas>

    <div id="loginModal" class="modal fade" data-keyboard="false" data-backdrop="static" role="dialog">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title"> BadMars v1 alpha</h4>
					</div>
					<div class="modal-body">
						<label for="usernameField">Username:</label>
						<input type="text" id="usernameField">
						<label for="usernameField">html color:</label>
						<input type="text" id="colorField">
					</div>
					<div class="modal-footer">
						<button onclick="window.login()" type="button" class="btn btn-default" data-dismiss="modal">Login</button>
					</div>
				</div>
			</div>
		</div>
  </body>

</html>
