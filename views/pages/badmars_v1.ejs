    <style>
      body {
        margin: 0;
        overflow: hidden;
      }

      canvas {
        width: 100%;
        height: 100%
      }
      button {
        z-index: 3;
      }
      #buttons {
        position: absolute;
        left: 10px;
        top: 200px;
        width: 100px;
        padding: 5px;

      }

      #buttons .btn {
        width: 100%;
        padding-bottom: 10px;
      }
      #info .progress-bar {
        padding: 5px;
      }

      #info {
        position: absolute;
        left: 10px;
        top: 50px;
        bottom: auto;
        width: 300px;
        height: auto;
        padding: 5px;
      }
      #HUDPanel {
        z-index:1;
      }
      #login {
        z-index:3;
      }
      #content {
        z-index: 2;
      }
      #threePanel {
        z-index:0;
      }

      .wrapper {
          position: relative;
          width: 100%;
          height: 100%;
      }

      .wrapper canvas {
          position: absolute;
          top: 0;
          left: 0;
      }

    </style>
