apiVersion: v1
kind: Service
metadata:
  name: badmars-balancer
spec:
  selector:
    app: badmars-balancer
  ports:
    - protocol: TCP
      name: website
      port: 3002
      targetPort: 3002
    - protocol: TCP
      name: websocket
      port: 7005
      targetPort: 7005
    - protocol: TCP
      name: hotreload
      port: 5858
      targetPort: 5858
    - protocol: TCP
      name: dashboard
      port: 8090
      targetPort: 8090
  type: LoadBalancer